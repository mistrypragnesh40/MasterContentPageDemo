<?xml version="1.0" encoding="utf-8" ?>
<controls:MasterContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MasterContentPageDemo.CustomControls"
             x:Class="MasterContentPageDemo.Views.TestPage"
             HeaderText="{Binding HeaderText}"
             FooterText="{Binding FooterText}"
             FooterButtonCommand="{Binding NavigateToOtherPageCommand}"
             HeaderLogo="{Binding HeaderLogo}"
             Title="Master Content Page Demo">
    <VerticalStackLayout Spacing="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Navigate to Other Page" Command="{Binding NavigateToOtherPageCommand}" />
    </VerticalStackLayout>
</controls:MasterContentPage>